[settings]
; freeciv game settings for the aviation ruleset

set =
    { "name", "value", "lock"
      "startunits", "ccc", FALSE ; start with three settlers, to get going quickly
      "topology", "ISO|WRAPX", FALSE ; there's no hex tileset
